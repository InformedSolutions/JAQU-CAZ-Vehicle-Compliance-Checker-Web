.govuk-form-group
  %label#vrn-label.govuk-label{for: 'vrn'}
    = I18n.t('labels.vrn')
    %p= I18n.t('labels.vrn_example')
  %input#vrn.govuk-input.govuk-input--width-10{'aria-labelledby': 'vrn-label',
                                               'aria-describedby': 'vrn',
                                               name: 'vrn',
                                               type: 'text',
                                               style: 'text-transform: uppercase;',
                                               maxlength: 15, 
                                               value: params[:vrn]}
