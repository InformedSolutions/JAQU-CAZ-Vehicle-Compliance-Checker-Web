= link_to 'Back', enter_details_vehicle_checkers_path(vrn: @vehicle_details.registration_number), class: 'govuk-back-link'
%main.govuk-main-wrapper#main-content{role: 'main'}
  - if alert
    .govuk-error-summary{"aria-labelledby" => "error-summary-title", "data-module" => "error-summary", role: "alert", tabindex: "-1"}
      %h2#error-summary-title.govuk-error-summary__title
        There is a problem
      .govuk-error-summary__body
        %ul.govuk-list.govuk-error-summary__list
          %li
            %a{href: "#confirm-vehicle-error"}= alert

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-l Are these the vehicle's details?
      %table.govuk-table
        %tbody.govuk-table__body
          %tr.govuk-table__row
            %td.govuk-table__cell{scope: "row"}
            %td.govuk-table__cell
          %tr.govuk-table__row
            %td.govuk-table__cell{scope: "row"} Registration
            %th.govuk-table__cell= @vehicle_details.registration_number
          %tr.govuk-table__row
            %td.govuk-table__cell{scope: "row"} Type
            %th.govuk-table__cell= @vehicle_details.type
          %tr.govuk-table__row
            %td.govuk-table__cell{scope: "row"} Make
            %th.govuk-table__cell= @vehicle_details.make
          %tr.govuk-table__row
            %td.govuk-table__cell{scope: "row"} Colour
            %th.govuk-table__cell= @vehicle_details.colour
          %tr.govuk-table__row
            %td.govuk-table__cell{scope: "row"} Fuel type
            %th.govuk-table__cell= @vehicle_details.fuel_type
          - if @vehicle_details.taxi_private_hire_vehicle.eql?('Yes')
            %tr.govuk-table__row
              %td.govuk-table__cell{scope: "row"} Taxi
              %th.govuk-table__cell= @vehicle_details.taxi_private_hire_vehicle

      = form_tag user_confirm_details_vehicle_checkers_path, method: :get do
        - if alert
          .govuk-form-group{class: 'govuk-form-group--error'}
            %span#confirm-vehicle-error.govuk-error-message
              %span.govuk-visually-hidden Error:
              Select yes if the details are correct
        - else
          .govuk-form-group
        %fieldset.govuk-fieldset
          %legend.govuk-visually-hidden
            Are these the vehicle's details?
          %input{name: 'vrn', type: 'hidden', value: @vehicle_details.registration_number}
          .govuk-radios.govuk-radios--inline
            .govuk-radios__item
              %input#confirm-vehicle-1.govuk-radios__input{name: "confirm-vehicle", type: "radio", value: "yes"}
              %label.govuk-label.govuk-radios__label{for: "confirm-vehicle-1"}
                Yes
            .govuk-radios__item
              %input#confirm-vehicle-2.govuk-radios__input{name: "confirm-vehicle", type: "radio", value: "no"}
              %label.govuk-label.govuk-radios__label{for: "confirm-vehicle-2"}
                No
        = submit_tag 'Confirm', 'data-role' => 'button', class: 'govuk-button'
