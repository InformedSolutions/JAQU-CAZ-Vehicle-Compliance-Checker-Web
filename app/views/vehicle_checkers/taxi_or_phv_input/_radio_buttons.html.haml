.govuk-form-group{class: ('govuk-form-group--error' if @errors[:confirm_details].present?)}
  - if @errors[:confirm_details].present?
    %span#confirm_details-error.govuk-error-message
      %span.govuk-visually-hidden Error:
      = @errors[:confirm_details].join(',')

  .govuk-radios.govuk-radios--inline#confirm_details_radios
    .govuk-radios__item
      = form.radio_button :confirm_details,
                          'yes',
                          class: 'govuk-radios__input',
                          id: 'confirm_details-1',
                          checked: params.dig(:confirm_details_form, :confirm_details) == 'yes'
      = form.label :confirm_details,
                   'Yes',
                   class: 'govuk-label govuk-radios__label',
                   for: 'confirm_details-1'

    .govuk-radios__item
      = form.radio_button :confirm_details,
                          'no',
                          class: 'govuk-radios__input',
                          id: 'confirm_details-2',
                          checked: params.dig(:confirm_details_form, :confirm_details) == 'no'
      = form.label :confirm_details,
                   'No',
                   class: 'govuk-label govuk-radios__label',
                   for: 'confirm_details-2'

.govuk-form-group{class: ('govuk-form-group--error' if @errors[:confirm_taxi_or_phv].present?)}
  - if @errors[:confirm_taxi_or_phv].present?
    %span#confirm_taxi_or_phv-error.govuk-error-message
      %span.govuk-visually-hidden Error:
      = @errors[:confirm_taxi_or_phv].join(',')

  %p
    Is your vehicle a taxi or private hire vehicle (PHV)?
  .govuk-radios.govuk-radios--inline#taxi_or_phv_radios
    .govuk-radios__item
      = form.radio_button :confirm_taxi_or_phv,
                          'true',
                          class: 'govuk-radios__input',
                          id: 'confirm_taxi_or_phv-1',
                          checked: params.dig(:confirm_details_form, :confirm_taxi_or_phv) == 'true'
      = form.label :confirm_taxi_or_phv,
                   'Yes',
                   class: 'govuk-label govuk-radios__label',
                   for: 'confirm_taxi_or_phv-1',
                   value: 'true'

    .govuk-radios__item
      = form.radio_button :confirm_taxi_or_phv,
                          'false',
                          class: 'govuk-radios__input',
                          id: 'confirm_taxi_or_phv-2',
                          checked: params.dig(:confirm_details_form, :confirm_taxi_or_phv) == 'false'
      = form.label :confirm_taxi_or_phv,
                   'No',
                   class: 'govuk-label govuk-radios__label',
                   for: 'confirm_taxi_or_phv-2'
